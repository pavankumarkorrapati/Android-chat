<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="96dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/friendSearch_profileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#E1D7D7"
            android:src="@drawable/ic_baseline_person_24"
            android:scaleType="centerCrop"
            android:contentDescription="profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friendSearch_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pavan_kumar"
                android:textAlignment="center"
                android:fontFamily="@font/advent_pro_semibold"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/friendSearch_addbtn"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:backgroundTint="#0DB71E"
                android:text="@string/add"
                android:textColor="#311B92" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>