<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:elevation="0dp"
    app:cardCornerRadius="0.5dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/sentChat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sentChat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is a text text with sssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:layout_margin="5dp"
            android:maxWidth="250dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/sentChat_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:16"
            android:fontFamily="@font/advent_pro_semibold"
            android:layout_marginStart="5dp"
            android:textSize="16sp" />



    </LinearLayout>

</androidx.cardview.widget.CardView>